<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/small_margin"
    app:cardBackgroundColor="@color/listItem_bg">

    <TextView
        android:id="@+id/item_locationName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medium_margin"
        android:gravity="start"
        android:text="觀測點名稱"
        android:textAppearance="?android:textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_img_status"
            android:layout_width="@dimen/item_img_width"
            android:layout_height="@dimen/item_img_height"
            android:src="@drawable/go_out_boy1"
            android:contentDescription="TODO" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medium_margin"
        android:gravity="end|bottom"
        android:text="城市"
        android:textAppearance="?android:textAppearanceSmall" />

</android.support.v7.widget.CardView>